{ 
    "$schema": "http://json.schemastore.org/template",
    "identity": "PoisnFang.Todo",
    "authors": "PoisnFang",
    "company": "PoisnFang",
    "description": "Manage a todo list",
    "product": "PoisnFang.Todo",
    "copyright": "PoisnFang",
    "assemblyname": "PoisnFang.Todo.Client.Oqtane",
    "classifications": [ "Web/Blazor/Oqtane" ],
    "name": "Oqtane Module Todo Template",
    "shortName": "poisnfang.todo",
    "tags": {
        "language": "C#"
    },
    "sourceName": "PoisnFang.Todo",
    "primaryOutputs": [
        {
            "path": "PoisnFang.Todo.Client.csproj"
        },
        {
            "path": "PoisnFang.Todo.Package.csproj"
        },
        {
            "path": "PoisnFang.Todo.Server.csproj"
        },
        {
            "path": "PoisnFang.Todo.Shared.csproj"
        }
      ],
    "sources": [
        {
            "exclude":[
                ".git/**", 
                ".vs/**", 
                ".template.config/**",
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                "**/*.gitignore",
                "**/*.csproj.user"
            ] 
        }
    ],
    "symbols":{
        "copyrightName": {
            "type": "parameter",
            "defaultValue": "Company",
            "replaces":"PoisnFang"
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
          }
    },
    "postActions": [
        {
          "condition": "(!skipRestore)",
          "description": "Restore NuGet packages required by this project.",
          "manualInstructions": [
            { "text": "Run 'dotnet restore'" }
          ],
          "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
          "continueOnError": true
        }
    ]
}
